    private async void RevealButtonClick()
    {
        if (!_guessing)
        {
            await Reset();
            return;
        }
        AddGuessedPokemon(_pokemonToGuess.Name, _pokemonToGuess);
    }

    private async void RestartButtonClick()
    {
        await Reset();
    }
}