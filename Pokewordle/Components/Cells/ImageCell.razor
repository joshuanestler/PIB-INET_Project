@namespace Pokewordle.Components.Cells
@inherits Microsoft.AspNetCore.Components.ComponentBase
@using Pokewordle.Shared.HtmlUtil

<td class="@Cell.HtmlClass" id="@Cell.HtmlId" style="height: 96; min-width: @(Cell.GetColumnWidth())em; max-width: @(Cell.GetColumnWidth())em; background-color: @Cell.Background;">
    <img src="@Cell.Url"/>
</td>

@code {
    [Parameter]
    [EditorRequired]
    public ImageCellData Cell { get; set; }
}