@namespace Pokewordle.Components.Cells
@inherits Microsoft.AspNetCore.Components.ComponentBase
@using Pokewordle.Shared.HtmlUtil

<td class="@Cell.HtmlClass" id="@Cell.HtmlId" style="background: linear-gradient(@(Cell.Degrees)deg, @Cell.Background1, @Cell.Background2);">@Cell.DisplayString</td>

@code {
    [Parameter]
    [EditorRequired]
    public GradientTableCell Cell { get; set; }
}
