@namespace Pokewordle.Components.Cells
@inherits Microsoft.AspNetCore.Components.ComponentBase
@using Pokewordle.Shared.HtmlUtil

<td class="@Cell.HtmlClass" id="@Cell.HtmlId" style="padding: 0px; background-color: @Cell.Background;">
    @foreach(string typeName in Cell.TypeNames)
    {
        <div class="poke-type-outer-border" style="border-radius:5px; padding: 3px; margin: 5px; background-color: @PokeTypeTableCell.TypeNameToColorHexString(typeName)">
            <div class="poke-type-border" style="border-width: 3px; border-radius:5px; padding: 2px; margin: 0px; background-color: #000000">
                <div class="pokemon-type" style="text-align:center; vertical-align: middle; border-radius: 5px; margin: 0px; background-color: @PokeTypeTableCell.TypeNameToColorHexString(typeName)">@typeName</div>
            </div>
        </div>
        Console.WriteLine(typeName);
    }
</td>

@code {
    [Parameter]
    [EditorRequired]
    public PokeTypeTableCell Cell { get; set; }
}
