@namespace Pokewordle.Components.Cells
@inherits Microsoft.AspNetCore.Components.ComponentBase
@using Pokewordle.Shared.HtmlUtil

<td class="@Cell.HtmlClass" id="@Cell.HtmlId" style="width: @(Cell.GetColumnWidth())em; background-color: @Cell.Background;">@Cell.DisplayString</td>

@code {
    [Parameter]
    [EditorRequired]
    public SimpleCellData Cell { get; set; }
}
