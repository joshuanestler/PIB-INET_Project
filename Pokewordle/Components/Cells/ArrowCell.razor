@namespace Pokewordle.Components.Cells
@inherits Microsoft.AspNetCore.Components.ComponentBase
@using Pokewordle.Shared.HtmlUtil

<td class="gradient-cell @Cell.HtmlClass" id="@Cell.HtmlId" style="background-color: @Cell.Background1;">
    <div class="content-wrapper">
        <img src="Resources/arrow-down.svg" alt=""/>
            <div class="centered">
                @Cell.DisplayString
            </div>
    </div>
</td>

@code {
    [Parameter]
    [EditorRequired]
    public GradientCellData Cell { get; set; }
}
